---
import Layout from "../layouts/Layout.astro";
import HallHome from "../modules/Home/components/sections/HallHome.astro";
import HeroHome from "../modules/Home/components/sections/HeroHome.astro";
import BoxContainer from "../modules/Shared/components/ui/BoxContainer.astro";
import PaymentsHome from "../modules/Home/components/sections/PaymentsHome.astro";
import ClientsHome from "../modules/Home/components/sections/ClientsHome.astro";
import RecoveryHome from "../modules/Home/components/sections/RecoveryHome.astro";
import CallToAction from "../modules/Home/components/sections/CallToAction.astro";

import lang from "../modules/Shared/i18n/ES.json";
---

<Layout>
  <BoxContainer
    className="grid place-content-end justify-start min-h-screen 3xl:min-h-[80vh] hero-bg"
  >
    <HeroHome lang={lang} />
  </BoxContainer>
  <BoxContainer>
    <HallHome lang={lang} />
  </BoxContainer>
  <BoxContainer
    background="linear-gradient(-270deg, rgba(255,255,255,1) 0%, rgba(240,240,240,1) 100%);"
  >
    <PaymentsHome lang={lang} />
  </BoxContainer>
  <BoxContainer>
    <ClientsHome lang={lang} />
  </BoxContainer>
  <BoxContainer
    background="linear-gradient(45deg, rgba(0,0,0,1) 0%, rgba(36,36,36,1) 100%)"
  >
    <RecoveryHome lang={lang} />
  </BoxContainer>
  <BoxContainer>
    <CallToAction lang={lang} />
  </BoxContainer>
</Layout>
