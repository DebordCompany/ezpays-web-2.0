---
import Cookies from "../modules/Shared/components/Sections/Cookies.astro";
import Footer from "../modules/Shared/components/Sections/Footer.astro";
import Header from "../modules/Shared/components/Sections/Header.astro";

import lang from "../modules/Shared/i18n/EN.json"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Ezpays || pagos 360</title>
  </head>
  <body class="font-poppins text-black bg-neutral-50">
    <Header lang={lang}/>
    <main class="">
      <slot />
    </main>
    <Footer/>
    <Cookies lang={lang}/>

  </body>
</html>

<style>
  @font-face {
    font-family: "Poppins";
    font-style: normal;
    font-weight: 400;
    src: url(/fonts/Poppins-Black.ttf) format("ttf");
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
