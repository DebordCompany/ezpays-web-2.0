---
import BankIcon from "../../../../Shared/components/icons/BankIcon.astro";
import DocumentIcon from "../../../../Shared/components/icons/DocumentIcon.astro";
import EzpaysNewIcon from "../../../../Shared/components/icons/EzpaysNewIcon.astro";
import Heading from "../../../../Shared/components/ui/Heading.astro";

const solutions = [
  "Transfer wait",
  "Sales visits",
  "Emails to customers",
  "Calls to customers",
  "All kinds of incidents",
  "Failed payment dates",
  "Payment installments",
  "Resend invoices",
  "Returns",
  "Reconciliations",
  "Discussions",
  "Loss of customers",
  "Negotiations",
  "Treasury",
];
---

<section class="flex flex-col-reverse h-auto lg:flex-row items-stretch gap-8 md:gap-40">
  <div class="flex flex-col justify-between gap-12 max-w-xl h-auto">
    <div class="flex flex-col gap-4">
      <Heading level="h2" className="">Solve the collection tasks</Heading>
      <p class="hidden md:block">
        {
          solutions.map((solution) => {
            return (
              <span class="font-light odd:font-semibold">{solution}, </span>
            );
          })
        }
      </p>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <div class="text-primary">
        <EzpaysNewIcon />
      </div>
      <p class="font-bold text-xl md:text-3xl">
        Forget about collection tasks Set up your collection policies Improve
        business relationships
      </p>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <div class="flex gap-4 items-center">
        <div>
          <DocumentIcon />
        </div>
        <div class="text-primary">
          <EzpaysNewIcon />
        </div>
        <div>
          <BankIcon />
        </div>
      </div>
      <div class="flex flex-col-reverse md:flex-col gap-2">
        <p>
          Collect or resolve customer arrears Automatic reconciliation
          Automation from start to finish
        </p>
        <h3 class="font-bold text-xl md:text-3xl">Your company will only have to invoice</h3>
      </div>
    </div>
  </div>
  <div class="w-full lg:max-w-xl aspect-video lg:aspect-[4/5] overflow-hidden rounded-2xl">
    <video
      src="/images/payment.mp4"
      autoplay muted loop
      class="object-cover object-left h-full w-full lg:w-fit rounded-md"
    />
  </div>
</section>