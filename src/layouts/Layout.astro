---
import Cookies from "../modules/Shared/components/Sections/Cookies.astro";
import Footer from "../modules/Shared/components/Sections/Footer.astro";
import Header from "../modules/Shared/components/Sections/Header.astro";

import lang from "../modules/Shared/i18n/ES.json";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Ezpays || pagos 360</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="text-black bg-neutral-50">
    <Header lang={lang} />
    <main class="">
      <slot />
    </main>
    <Cookies lang={lang} />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Lexend Deca", serif;
    font-optical-sizing: auto;
    font-weight: 100 900;
    font-style: normal;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Lexend Deca", sans-serif;
  }
  .hero-bg {
    background: url(/images/hero-bg-mobile.webp);
  }
  @media screen and (min-width: 1024px) {
    .hero-bg {
      background: url(/images/hero-bg.webp);
    }
  }
</style>
