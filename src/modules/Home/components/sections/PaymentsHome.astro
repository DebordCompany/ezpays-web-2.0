---
import BankIcon from "../../../Shared/components/icons/BankIcon.astro";
import DocumentIcon from "../../../Shared/components/icons/DocumentIcon.astro";
import EzpaysNewIcon from "../../../Shared/components/icons/EzpaysNewIcon.astro";
import Heading from "../../../Shared/components/ui/Heading.astro";

const solutions = [
  "Espera de transferencias",
  "Visitas comerciales",
  "Emails a clientes",
  "Llamadas a clientes",
  "Incidencias de todo tipo",
  "Fechas de pago fallidas",
  "Fraccionamientos del pago",
  "Reenviar facturas",
  "Devoluciones",
  "Conciliaciones",
  "Discusiones",
  "Pérdida de clientes",
  "Negociaciones",
  "Tesorería",
];
---

<section
  class="flex flex-col-reverse h-auto lg:flex-row items-stretch gap-8 md:gap-40"
>
  <div class="flex flex-col justify-between gap-12 max-w-xl h-auto">
    <div class="flex flex-col gap-4">
      <Heading level="h2" className="">Soluciona las tareas de cobro</Heading>
      <p class="hidden md:block">
        {
          solutions.map((solution) => {
            return (
              <span class="font-light odd:font-semibold">{solution}, </span>
            );
          })
        }
      </p>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <div class="text-primary">
        <EzpaysNewIcon />
      </div>
      <p class="font-bold text-xl md:text-3xl">
        Olvida las tareas para cobrar Configura tus politicas de cobro Mejora
        las relaciones comerciales
      </p>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <div class="flex gap-4 items-center">
        <div>
          <DocumentIcon />
        </div>
        <div class="text-primary">
          <EzpaysNewIcon />
        </div>
        <div>
          <BankIcon />
        </div>
      </div>
      <div class="flex flex-col-reverse md:flex-col gap-2">
        <p>
          Cobra o resuelve atrasos de clientes Conciliación automática
          Automatizacion de principio a fin
        </p>
        <h3 class="font-bold text-xl md:text-3xl">Tu empresa solo tendrá que facturar</h3>
      </div>
    </div>
  </div>
  <div class="w-full lg:max-w-xl aspect-video lg:aspect-[4/5] overflow-hidden rounded-2xl">
    <video
      src="/images/payment.mp4"
      autoplay muted loop
      class="object-cover object-left h-full w-full lg:w-fit rounded-md"
    />
    
  </div>
</section>
