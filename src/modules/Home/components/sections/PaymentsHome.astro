---
import BankIcon from "../../../Shared/components/icons/BankIcon.astro";
import DocumentIcon from "../../../Shared/components/icons/DocumentIcon.astro";
import EzpaysNewIcon from "../../../Shared/components/icons/EzpaysNewIcon.astro";
import Heading from "../../../Shared/components/ui/Heading.astro";

const { lang } = Astro.props;
---

<section
  class="flex flex-col-reverse h-auto lg:flex-row items-stretch gap-8 md:gap-40"
>
  <div class="flex flex-col justify-between gap-12 max-w-xl h-auto">
    <div class="flex flex-col gap-4">
      <Heading level="h2" className="">{lang.home.payment.title}</Heading>
      <p class="hidden md:block">
        {
          lang.home.payment.description.map((solution: string) => {
            return (
              <span class="font-light odd:font-semibold">{solution}, </span>
            );
          })
        }
      </p>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <ul class="font-bold text-xl md:text-3xl">
        {
          lang.home.payment.subtitle.map((text: string) => {
            return <li>{text}</li>;
          })
        }
      </ul>
    </div>
    <div class="flex flex-col-reverse md:flex-col gap-4">
      <div class="flex gap-4 items-center">
        <div>
          <DocumentIcon />
        </div>
        <div class="text-primary">
          <EzpaysNewIcon />
        </div>
        <div>
          <BankIcon />
        </div>
      </div>
      <div class="flex flex-col-reverse md:flex-col gap-2">
        <p>
          {lang.home.payment.footer.subtitle}
        </p>
        <h3 class="font-bold text-xl md:text-3xl">
          {lang.home.payment.footer.title}
        </h3>
      </div>
    </div>
  </div>
  <div
    class="w-full lg:max-w-xl aspect-video lg:aspect-[4/5] overflow-hidden rounded-2xl"
  >
    <video
      src="/images/payment.mp4"
      autoplay
      muted
      loop
      class="object-cover object-left h-full w-full lg:w-fit rounded-md"
    ></video>
  </div>
</section>
